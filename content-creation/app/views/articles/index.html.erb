<p id="notice"><%= notice %></p>

<h1>Articles</h1>

<h2>Drafts</h2>
<table>
  <tbody>
  <% @drafts.each do |article| %>
      <tr>
        <td><%= article.updated_at.strftime("%d/%m/%Y %H:%M") %></td>
        <td><%= article.title %></td>
        <td><%= link_to 'Show', article %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Finish', finish_article_path(article), method: :put %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<h2>Available</h2>
<table>
  <tbody>
  <% @availables.each do |article| %>
      <tr>
        <td><%= article.updated_at.strftime("%d/%m/%Y %H:%M") %></td>
        <td><%= article.title %></td>
        <td><%= link_to 'Recall', recall_article_path(article), method: :put %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

